{
  "manifest_version": 2,

  "name": "tl;dr finder",
  "description": "Let us find the tl;dr of the email or article you are viewing so you don't have to!",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["tldr.js"]
    }
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": "icon.png"
  }
}
